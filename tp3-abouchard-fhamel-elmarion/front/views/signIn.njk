{% extends "layout.njk" %}

{% block contain %}
	<h2>Sign In</h2>

    <div id="formSign">
        <p class="bg-danger" id="dangerSignIn"></p>
        <form action="/users/login" method="POST" id="formSignIn">
            <div class="form-group row">
                <label for="email" class="col-2 col-form-label">Email:</label>
                <div class="col-10">
                    <input type="email" name="email" id="email" class="form-control"  placeholder="abc@def.ghi"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-2 col-form-label">Password:</label>
                <div class="col-10">
                    <input type="password" name="password" id="password" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="center">
                    <input type="submit" value="Sign In" class="btn btn-primary btn-lg btn-block" />
                </div>
            </div>
            
        </form>
        <a href="/users/create" class="right">Sign Up ?</a>
    </div>
    
    <script src="../js/PostSignIn.js"></script>
{% endblock %}
